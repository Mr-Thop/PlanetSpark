<!-- app/views/sessions/new.html.erb -->
<h2>Log In</h2>

<%= form_with(url: login_path) do |form| %>
  <% if flash[:alert] %>
    <div id="error_explanation">
      <p><%= flash[:alert] %></p>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div class="actions">
    <%= form.submit 'Log In' %>
  </div>
<% end %>

<%= link_to 'Sign Up', signup_path %> if you don't have an account.

